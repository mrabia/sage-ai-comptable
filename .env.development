# Development Environment Configuration
# Sage AI Comptable - Development Mode

# Environment
FLASK_ENV=development
FLASK_DEBUG=True
ENVIRONMENT=development

# Database (SQLite for development)
DATABASE_URL=sqlite:///sage_ai_dev.db

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_SECONDS=30

# Sage Business Cloud Configuration
SAGE_CLIENT_ID=your_sage_client_id_here
SAGE_CLIENT_SECRET=your_sage_client_secret_here
SAGE_REDIRECT_URI=http://localhost:5000/auth/sage/callback

# Security
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-change-in-production

# Development Settings
DEBUG_MODE=True
LOG_LEVEL=DEBUG

# Proxy Settings (if needed)
# HTTPS_PROXY=http://proxy.company.com:8080
# HTTP_PROXY=http://proxy.company.com:8080
# ALL_PROXY=http://proxy.company.com:8080

